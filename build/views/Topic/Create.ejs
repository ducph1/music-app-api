<%- include('../components/Header/index'); %>
<%- include('../components/NavBar/index'); %>
<%- include('../components/SideBar/index'); %>

<% 
  const {
    name,
    id,
    image,
  } = payload;
%> 

<div class="dashboard-wrapper">
  <div class="container-fluid dashboard-content">
    <div class="row">
      <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header">
          <div class="page-breadcrumb">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/auth/topic" class="breadcrumb-link">Topic</a></li>
                <li class="breadcrumb-item active" aria-current="page">Tạo mới - Chỉnh sửa topic</li>
              </ol>
            </nav>
          </div>
        </div>
      </div> 
    </div>
    <%- include('../components/Message/index'); %>
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 mb-4">
      <% if (id) { %>
        <form id="deleteForm" method="POST" action="/auth/topic/xoa?id=<%= id %>"></form>
      <% } %> 
      <form class="needs-validation" id="setting-form" method="POST" onsubmit="submitTopic(event);" action="/auth/topic/tao-moi">
        <input type="hidden" id="id" name="id" value="<%= id %>">
        <div class="form-group row">
          <label class="col-12 col-sm-3 col-form-label text-sm-right">Tên topic</label>
          <div class="col-12 col-sm-8 col-lg-6">
            <input type="text" class="form-control" id="name" required name="name" value="<%= name %>">
          </div>
        </div>

        <div class="form-group row">
            <label class="col-12 col-sm-3 col-form-label text-sm-right">Thumbnail</label>
            <div class="col-12 col-sm-8 col-lg-6">
              <div>
                <input type="file" onchange="changeImage(event);" accept="image/*" class="form-control upload_file" id="link_fake" required>
                <input type="text" id="image" name="image" class="link_tiny" value="<%= image %>" style="display: none;">
                <!-- <input type="text" class="form-control" id="image" required onchange="changeThumbnail(event);" name="image" value="<%= image %>">  -->
              </div>
              <br />
              <!-- <div>
                <img width="100" id="thumbnail-img" src="<%= image || '/assets/images/avatar-1.jpg' %>" alt="">
              </div> -->
              <div class="image_container">
                <img class="image_children" id="thumbnail-img" src="<%= image || '/assets/images/img.png' %>" alt="">
              </div>
            </div>
        </div>


        <div class="form-group row">
          <div class="col col-sm-10 col-lg-9 offset-sm-1 offset-lg-0">
            <button type="submit" class="btn btn-space btn-primary">Thêm / Cập nhật</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../components/Footer/MainLibraries'); %>
<%- include('../components/Footer/index'); %>
<%- include('../components/Footer/DataTable'); %>
<script src="/js/Topic.js"></script> 
